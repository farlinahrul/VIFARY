<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuHidroponik"
    android:orientation="vertical"
    android:background="#d6dfb9">
    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corner_3">
        <ImageButton
            android:id="@+id/btnBeranda"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"

            android:background="@drawable/btn_menu"
            android:src="@drawable/button_ripple_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_tanaman_hidroponik"
            android:fontFamily="@font/ms_reguler"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textSize="32sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanaman semusim"
            android:fontFamily="@font/ms_reguler"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Menu"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ms_bold"
        android:textSize="28sp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:paddingHorizontal="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <FrameLayout
                android:id="@+id/layer1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="10dp">
                <ImageButton
                    android:id="@+id/btnTentangTanaman"
                    android:onClick="showPopupTentangTanaman"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_ripple_4" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_tentang_tanaman"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:gravity="center"
                        android:text="@string/tentang_tanaman"
                        android:textColor="#FFF"
                        android:fontFamily="@font/ms_bold"
                        android:textSize="18sp"/>


                </LinearLayout>


            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="showPopUpImplementasiIOT"
                    android:background="@drawable/button_ripple_4" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_implementasi_iot"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:gravity="center"
                        android:text="Implementasi IOT"
                        android:textColor="#FFF"
                        android:fontFamily="@font/ms_bold"
                        android:textSize="18sp"/>


                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="10dp">
                <ImageButton
                    android:id="@+id/btnKonfigurasiPinIOT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_ripple_4" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_configure"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Konfigurasi Pin IOT"
                        android:gravity="center"
                        android:textColor="#FFF"
                        android:fontFamily="@font/ms_bold"
                        android:textSize="18sp"/>


                </LinearLayout>


            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp">
                <ImageButton
                    android:onClick="showPopUpArPerakitanAlat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_ripple_4" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_ar"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="AR Perakitan Alat"
                        android:gravity="center"
                        android:textColor="#FFF"
                        android:fontFamily="@font/ms_bold"
                        android:textSize="18sp"/>


                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">


        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="24dp"/>

    </LinearLayout>



</LinearLayout>