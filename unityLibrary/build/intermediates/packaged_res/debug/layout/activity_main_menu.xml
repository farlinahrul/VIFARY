<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="32dp"
        android:paddingStart="16dp"
        android:paddingBottom="38dp">

        <ImageButton
            android:onClick="menuu"
            android:id="@+id/btnBeranda"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_menu"
            android:src="@drawable/button_ripple_2" />

        <TextView
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beranda"
            android:textSize="18sp"
            android:fontFamily="@font/ms_bold"
            android:layout_gravity="top"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/corner_1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hi_praktikan"
                android:fontFamily="@font/ms_reguler"
                android:textSize="24sp"
                android:textColor="#000"
                android:paddingStart="16dp"
                android:paddingTop="32dp"
                android:paddingBottom="28dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/corner_2"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="32dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih media tanam yang akan kamu pelajari"
                    android:fontFamily="@font/ms_reguler"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/hidro_menu" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tanaman_hidroponik"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FFF"
                            android:lineSpacingExtra="12sp"
                            android:paddingStart="20dp"
                            android:paddingTop="16dp"/>
                        <Button
                            android:id="@+id/btnHidroponik"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="@string/pilih"
                            android:textAllCaps="false"
                            android:background="@drawable/button_ripple_3"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="28dp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/aqua_menu" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tanaman_aquaponik"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FFF"
                            android:lineSpacingExtra="12sp"
                            android:paddingStart="20dp"
                            android:paddingTop="16dp"/>
                        <Button
                            android:id="@+id/btnAquaponik"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="@string/pilih"
                            android:textAllCaps="false"
                            android:background="@drawable/button_ripple_3"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="28dp"/>
                        
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>